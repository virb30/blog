.container {
	@apply w-full flex items-center justify-center flex-col;

	& img {
		@apply h-40 w-40 rounded-full mb-8;
	}

	& h1 {
		@apply mb-4 text-5xl;
	}

	& span {
		@apply block font-thin mb-4 text-lg mt-2 text-center;
	}
}

.socialContainer {
	@apply flex mt-6;

	& a {
		@apply block bg-gray-200 rounded py-2 px-3 text-2xl text-gray-800;

		& + a {
			@apply ml-3;
		}

		&:hover {
			@apply bg-indigo-700 text-white;
		}
	}
}
