.content {
	@apply m-auto max-w-6xl p-4;

	& header {
		@apply mt-12 mb-8;

		& h1 {
			@apply font-bold text-2xl mb-3;
		}

		& p {
			@apply font-light text-xl;
		}
	}

	& .postsContainer {
		@apply grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 flex-col sm:flex-row lg:flex-row w-full flex-wrap;
	}
}
